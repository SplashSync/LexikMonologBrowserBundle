{
    "name": "splash/sonata-admin-monolog-bundle",
    "type": "symfony-bundle",
    
    "description": "Provide a Doctrine DBAL handler for Monolog with Sonata Admin Implementation. This Bundle is inspired from LexikMonologBrowserBundle.",
    "keywords": ["Symfony3", "Symfony4", "bundle", "monolog", "logger", "doctrine", "sonata", "sonata-project", "admin"],
    "homepage": "https://github.com/splash/SonataAdminMonologBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeremy Barthe",
            "email": "j.barthe@lexik.fr"
        },
        {
            "name": "Dev Lexik",
            "email": "dev@lexik.fr"
        },
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    
    "autoload": {
        "psr-4": {
            "Splash\\SonataAdminMonologBundle\\": "src/"
        }
    },
    
    "require": {
        "php":                                      "^7.0",
        "monolog/monolog":                          "~1.24",
        "doctrine/doctrine-bundle":                 "~1.6",
        "sonata-project/admin-bundle":              "~3.0"
    },
    
    "autoload-dev": {
        "psr-4": {
            "Splash\\SonataAdminMonologBundle\\Tests\\": "tests/"
        },
        "classmap": [ "tests/Kernel.php" ]
    },
    
    "require-dev": {
        "symfony/symfony":                              ">3.4",
        "symfony/monolog-bundle":                       "*",
        "symfony/phpunit-bridge":                       "*",
        
        "sonata-project/user-bundle":                   ">3.0",
        "symfony/console":                              "*",        
        "symfony/var-dumper":                           "*", 
        
        "phpunit/phpunit":                              ">6",
        
        "doctrine/orm":                                 "^2.4",
        
        "composer/composer":                            "^1.5",
        "j13k/yaml-lint":                               "^1.1",
        "jakub-onderka/php-parallel-lint":              "^1.0",
        "phpmd/phpmd":                                  "^2.6",
        "phpro/grumphp":                                "^0.14.0",
        "sclable/xml-lint":                             "^0.2.4",
        "sebastian/phpcpd":                             ">3.0",
        "seld/jsonlint":                                "^1.7",
        "sensiolabs/security-checker":                  "*",
        "squizlabs/php_codesniffer":                    "^3.2",
        "escapestudios/symfony2-coding-standard":       "^3.4",
        "friendsofphp/php-cs-fixer":                    "*",        
        
        "phpstan/phpstan-shim":                         "^0.10",
        "phpstan/phpstan-doctrine":                     "^0.10",
        "phpstan/phpstan-phpunit":                      "^0.10",
        "phpstan/phpstan-symfony":                      "^0.10"        
        
    },
    
    "config": {
        "minimum-stability" :   "dev",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    }
    
}

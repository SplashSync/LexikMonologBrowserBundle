{
    "name": "splash/sonata-admin-monolog-bundle",
    "type": "symfony-bundle",
    
    "description": "This Bundle is inspired from LexikMonologBrowserBundle, it provides a Doctrine DBAL handler for Monolog and Sonata Admin.",
    "keywords": ["Symfony3", "Symfony4", "bundle", "monolog", "logger", "doctrine", "sonata", "sonata-project", "admin"],
    "homepage": "https://github.com/splash/SonataAdminMonologBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeremy Barthe",
            "email": "j.barthe@lexik.fr"
        },
        {
            "name": "Dev Lexik",
            "email": "dev@lexik.fr"
        },
        {
            "name":"Splash Sync",
            "email":"contact@splashsync.com"
        },
        {
            "name": "Bernard Paquier",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],
    
    "require": {
        "php":                              "^7.0",
        "symfony/symfony":                  ">3.4",
        "symfony/monolog-bundle":           "*",
        "doctrine/doctrine-bundle":         ">=1.6",
        "sonata-project/admin-bundle":      ">=3.0"
    },
    "require-dev": {
        "symfony/profiler-pack":            "^1.0",
        "symfony/var-dumper":               "*"        
    },
    
    "config": {
        "minimum-stability" :   "dev",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    
    "autoload": {
        "psr-4": {
            "Splash\\SonataAdminMonologBundle\\": "src/"
        }
    },
    
    "autoload-dev": {
        "psr-4": {
            "Splash\\SonataAdminMonologBundle\\\\Tests\\": "tests/"
        }
    },
    
    "replace": {
        "paragonie/random_compat": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    
    "conflict": {
        "symfony/symfony": "*"
    },
    
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "4.1.*"
        }
    }    
}
